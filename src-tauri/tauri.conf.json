{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rodnmod-rewrite",
  "version": "1.0.0-alpha",
  "identifier": "com.rodnmod-rewrite.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Rod n' Mod",
        "decorations": false,
        "width": 1300,
        "height": 800,
        "closable": false,
        "maximizable": false,
        "minimizable": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "msi"],
    "icon": [
      "icons/rodnmod.ico"
    ]
  }
}
