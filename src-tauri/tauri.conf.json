{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rodnmod-rewrite",
  "version": "0.1.0",
  "identifier": "com.rodnmod-rewrite.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Rod n' Mod",
        "decorations": false,
        "transparent": true,
        "fullscreen": false,
        "width": 1300,
        "height": 800,
        "resizable": false,
        "maximized": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
